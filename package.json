{
  "name": "balance-of-power-web",
  "version": "1.0.0",
  "description": "Web port of Balance of Power strategy game",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:prod": "tsc && vite build --mode production",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "deploy": "npm run build:prod && npm run preview",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.0.0",
    "terser": "^5.44.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  }
}
